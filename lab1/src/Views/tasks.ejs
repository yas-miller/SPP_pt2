<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">    <!--<link rel="stylesheet" href="/stylesheets/style.css">-->
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <!-- <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">-->
    <title><%= title %></title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#"><%=title%></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="tasks">Tasks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="create">Create</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="d-flex w-100 justify-content-between">

        <div class="d-flex flex-column">
            <div class="sortPannel px-md-5 mt-1">
                <form action="/tasks" method="post">

                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Sort select</label>
                        <select class="form-control" id="exampleFormControlSelect1" name="sortSelect">
                            <option value="name">Name</option>
                            <option value="description">Description</option>
                            <option value="dateTime">DateTime</option>
                        </select>
                    </div>

                    <button type = "submit" class="btn btn-primary">Sort</button>
                </form>
            </div>

            <div class="sortPannel px-md-4 mt-4">
                <form action="/delete_task" method="post">

                    <div class="col-md-12 mb-8">
                        <label for="validationTooltip01">Name of task</label>
                        <input type="text" class="form-control" name="taskName" id="validationTooltip01" required>
                    </div>

                    <div class="px-md-3 mt-3">
                        <button type = "submit" class="btn btn-primary">Delete</button>
                    </div>
                </form>
            </div>

            <div class="sortPannel px-md-4 mt-4">
                <form action="/edit_task" method="post">

                    <div class="col-md-12 mb-8">
                        <label for="validationTooltip01">Name of task</label>
                        <input type="text" class="form-control" name="taskNameEdit" id="validationTooltip01" required>
                    </div>

                    <div class="col-md-12 mb-8">
                        <label for="validationTooltip01">New name for task</label>
                        <input type="text" class="form-control" name="newTaskName" id="validationTooltip01" required>
                    </div>

                    <div class="col-md-12 mb-8">
                        <label for="validationTooltip01">New description for task</label>
                        <input type="text" class="form-control" name="newTaskDescription" id="validationTooltip01" required>
                    </div>

                    <div class="col-md-12 mb-8">
                        <label for="validationTooltip01">New date and time for task</label>
                        <input type="datetime-local" class="form-control" name="newTaskDateTime" id="validationTooltip01" required>
                    </div>

                    <div class="px-md-3 mt-3">
                        <button type = "submit" class="btn btn-primary">Edit</button>
                    </div>
                </form>
            </div>

         </div>
<!--

-->
    <% if (taskArr.length != 0) {%>
        <div class = "list-group col-md-8">
            <%for (var i = 0; i < taskArr.length; i++) { %>
                <div href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <div class="d-flex flex-column">
                            <h5 class="mb-1"><%= taskArr[i].name%></h5>
                            <p class="mb-1"><%= taskArr[i].description%></p>
                            <p class="mb-1"><%= taskArr[i].dateTime%></p>
                            <small><%= taskArr[i].date%></small>
                        </div>
                       <!-- <div class="d-flex flex-column justify-content-between">
                            <button type="button" class="btn btn-primary">Delete</button>
                            <button type="button" class="btn btn-primary mt-1">Edit</button>
                        </div> -->
                    </div>
                </div>
            <%}%>
        </div>
    <%} else {%>
        <h2>Задач нету</h2>
    <%}%>
    </div>

</body>
</html>